<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
android:background="@color/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7">
<androidx.viewpager.widget.ViewPager
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/vv_pager"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_10sdp"
                app:tabBackground="@drawable/tab_selector"
                android:background="@color/background"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:id="@+id/iv_login"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@+id/iv_login"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/rl_btw">
                <View
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:background="@color/light_grey1"
                    android:id="@+id/vv1"/>
                <textfont.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_or"
                    android:layout_centerInParent="true"
                    android:textColor="@color/light_grey1"
                    android:text=" OR "/>
                <View
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@color/light_grey1"
                    android:id="@+id/vv2"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/register"
                android:layout_below="@+id/rl_btw"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:id="@+id/iv_register"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/_145sdp"
        android:id="@+id/ll_layoutleft"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="match_parent"></LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/_145sdp"
        android:id="@+id/ll_layout"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
android:visibility="gone"
        android:layout_height="match_parent"></LinearLayout>
</RelativeLayout>
</layout>