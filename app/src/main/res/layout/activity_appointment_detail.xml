<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/header_t">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/ic_back" />
        </RelativeLayout>

        <textfont.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Appointment Details"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="vertical">
    <textfont.TextViewLight
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment For:"
        android:textSize="@dimen/_9ssp"
        android:textColor="@color/consu"/>
        <textfont.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDICATION"
            android:textColor="@color/royal_blue_whit"
            android:textSize="@dimen/_15ssp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/greybackn"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/calendar_blue"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/iv_cal"/>

                <textfont.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/iv_cal"
                    android:text="Date"
                    android:textColor="@color/consu"
                    android:textSize="@dimen/_9ssp" />
                <textfont.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 sept, 2020"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/consu"
                   android:layout_marginRight="@dimen/_10sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_3sdp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_time_cons"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/iv_time"/>
                <textfont.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timing"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/consu"
                    android:layout_toRightOf="@+id/iv_time"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_3sdp"/>
                <textfont.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:30 AM"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/consu"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_3sdp"/>

            </RelativeLayout>
        </LinearLayout>
        <textfont.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/white_black"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_15sdp"/>
        <textfont.TextViewLight
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print, graphic or web designs. The passage is attributed to an unknown typesetter in the 15th century who is thought to have scrambled parts of Cicero's De Finibus Bonorum et Malorum for use in a type specimen book."
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/consu"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/tv_details"/>

    </LinearLayout>


</LinearLayout>
</layout>