<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        android:gravity="center">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/accept"/>
        <textfont.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONGRATULATIONS"
            android:textColor="@color/royal_blue_whit"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_15sdp"/>
        <textfont.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:lineHeight="@dimen/_15sdp"
            android:textColor="@color/white_black"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="You have successfully registered with\nDoc in the Family"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/login"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/iv_login"/>
    </LinearLayout>
</layout>