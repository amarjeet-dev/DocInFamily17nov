<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>

        <import type="android.view.View" />


        <variable
            name="isVisible"
            type="boolean" />

        <variable
            name="isProgressShown"
            type="boolean" />

        <variable
            name="message"
            type="String" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/header_t">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/ic_back" />
        </RelativeLayout>

        <textfont.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Settings Basic Info"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />
        <RelativeLayout
            android:id="@+id/rl_edit"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/skip_bg"
            android:gravity="center">
            <textfont.TextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_centerInParent="true"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="@dimen/_1sdp"
        android:layout_height="match_parent"
        android:background="@color/light_grey1"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_below="@+id/rl_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/rl_toolbar"
        android:id="@+id/ll_name"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="horizontal">
        <textfont.TextViewLight
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/circlered_bg"/>
        <textfont.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white_black"/>
    </LinearLayout>
    <textfont.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/white_black"
        android:layout_below="@+id/ll_name"
        android:layout_marginLeft="@dimen/_35sdp"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tv_name"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/tv_name"
        android:id="@+id/ll_email"
        android:gravity="center|left"

        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="horizontal">
        <textfont.TextViewLight
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/circlepink_bg"/>
        <textfont.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email Address"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white_black"/>
    </LinearLayout>
    <textfont.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jhon@gmail.com"
        android:textColor="@color/white_black"
        android:layout_below="@+id/ll_email"
        android:layout_marginLeft="@dimen/_35sdp"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tv_email"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/tv_email"
        android:id="@+id/ll_mobile"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="horizontal">
        <textfont.TextViewLight
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/circleorange_bg"/>
        <textfont.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Mobile"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white_black"/>
    </LinearLayout>
    <textfont.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+16767689067"
        android:textColor="@color/white_black"
        android:layout_below="@+id/ll_mobile"
        android:layout_marginLeft="@dimen/_35sdp"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tv_mobile"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/tv_mobile"
        android:id="@+id/ll_dob"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="horizontal">
        <textfont.TextViewLight
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/circleyellow_bg"/>
        <textfont.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="DOB"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white_black"/>
    </LinearLayout>
    <textfont.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01-12-2020"
        android:textColor="@color/white_black"
        android:layout_below="@+id/ll_dob"
        android:layout_marginLeft="@dimen/_35sdp"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tv_dob"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/tv_dob"
        android:id="@+id/ll_state"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="horizontal">
        <textfont.TextViewLight
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/circlegreen_bg"/>
        <textfont.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="State"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white_black"/>
    </LinearLayout>
    <textfont.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="British Columbia"
        android:textColor="@color/white_black"
        android:layout_below="@+id/ll_state"
        android:layout_marginLeft="@dimen/_35sdp"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tv_state"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/tv_state"
        android:id="@+id/ll_country"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="horizontal">
        <textfont.TextViewLight
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/circleblue_bg"/>
        <textfont.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Country"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white_black"/>
    </LinearLayout>
    <textfont.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canada"
        android:textColor="@color/white_black"
        android:layout_below="@+id/ll_country"
        android:layout_marginLeft="@dimen/_35sdp"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tv_country"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/tv_country"
        android:id="@+id/ll_sex"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="horizontal">
        <textfont.TextViewLight
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/circlepurple_bg"/>
        <textfont.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sex"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/white_black"/>
    </LinearLayout>
    <textfont.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textColor="@color/white_black"
        android:layout_below="@+id/ll_sex"
        android:layout_marginLeft="@dimen/_35sdp"
        android:textSize="@dimen/_11ssp"
        android:id="@+id/tv_sex"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTintMode="src_in"
        android:visibility="@{!isProgressShown ? View.GONE : View.VISIBLE}" />

</RelativeLayout>
</layout>